crEATE DATABASE Quan_Ly_Sach;
use Quan_Ly_Sach;

create table Authors(
Authors_id INT NOT NULL auto_increment PRIMARY key,
name_Authors varchar(255),
birth_date DATETIME,
nationality VARCHAR(255)
);


create table Genres(
Genres_id int NOT NULL auto_increment PRIMARY key,
name_Genres varchar(255)
);

create table Books(
Book_id int not null primary key,
title varchar(255),
publication_year int,
Authors_id int,
Genres_id int,
foreign key (Authors_id) references Authors (Authors_id),
foreign key (Genres_id) references Genres (Genres_id)
);

